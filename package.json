{
  "name": "shopverse-api",
  "version": "1.0.0",
  "description": "A full-featured e-commerce REST API backend for ShopVerse",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:sync": "node -e \"require('./models').sequelize.sync({force: true}).then(() => process.exit(0)).catch(e => {console.error(e); process.exit(1);})\"",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/setup-db.js",
    "db:setup": "node scripts/setup-db.js",
    "seed": "node scripts/seed.js",
    "setup": "npm install && node scripts/setup-db.js"
  },
  "keywords": [
    "ecommerce",
    "api",
    "rest",
    "nodejs",
    "express",
    "postgresql",
    "sequelize"
  ],
  "author": "ShopVerse Team",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2"
  }
}
